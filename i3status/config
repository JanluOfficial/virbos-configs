general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

order += "battery 0"
order += "memory"
order += "load"
order += "tztime local"

battery 0 {
        format = "%status %percentage %remaining %emptytime"
        format_down = ""
        status_chr = "charging"
        status_bat = "battery"
        status_unk = ""
        status_full = "full"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

tztime local {
        format = "%H:%M:%S %Y/%m/%d "
        hide_if_equals_localtime = true
}

load {
        format = "%usage"
}

memory {
        format = "%used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}
